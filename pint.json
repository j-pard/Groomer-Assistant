{
    "preset": "psr12",
    "exclude": [
        "packages",
        "public",
        "resources/views"
    ],
    "rules": {
        "array_push": true,
        "array_syntax": true,
        "cast_spaces": true,
        "concat_space": {
            "spacing": "one"
        },
        "echo_tag_syntax": true,
        "no_extra_blank_lines": true,
        "no_singleline_whitespace_before_semicolons": true,
        "no_spaces_around_offset": true,
        "no_superfluous_elseif": true,
        "phpdoc_trim_consecutive_blank_line_separation": true,
        "single_quote": true
    }
}
